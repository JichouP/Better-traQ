{
  "name": "better-traq",
  "version": "1.0.0",
  "description": "An Extension that Makes traQ Useful",
  "main": "index.js",
  "scripts": {
    "dev:both": "npm run dev:traQ && npm run dev:ex-traQ",
    "dev:traQ": "env-cmd -e traQ --use-shell npm run dev",
    "dev:ex-traQ": "env-cmd -e ex-traQ --use-shell npm run dev",
    "dev": "npm run generateManifest && npm run bundle:dev",
    "build:both": "npm run build:traQ && npm run build:ex-traQ",
    "build:traQ": "env-cmd -e traQ --use-shell npm run build",
    "build:ex-traQ": "env-cmd -e ex-traQ --use-shell npm run build",
    "build": "npm run generateManifest && npm run bundle:prod && npm run generateArtifact",
    "bundle:prod": "webpack --config webpack.prod.ts",
    "bundle:dev": "webpack --config webpack.dev.ts",
    "generateManifest": "ts-node -r tsconfig-paths/register src/utils/generateManifest.ts",
    "generateArtifact": "ts-node -r tsconfig-paths/register src/utils/generateArtifact.ts",
    "test": "jest --color",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:badge": "npm run test:coverage && jest-coverage-badges",
    "test:badge:add": "npm run test:badge && git add coverage",
    "tsc:babelConfig": "tsc babel.config.ts --skipLibCheck --newLine LF && prettier --write babel.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JichouP/Better-traQ.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JichouP/Better-traQ/issues"
  },
  "homepage": "https://github.com/JichouP/Better-traQ#readme",
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.4",
    "archiver": "^5.3.0",
    "env-cmd": "^10.1.0",
    "mkdirp": "^1.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webextension-polyfill-ts": "^0.25.0",
    "zod": "^3.0.0-alpha.39"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@types/archiver": "^5.1.0",
    "@types/chrome": "^0.0.138",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/jest": "^26.0.23",
    "@types/mkdirp": "^1.0.1",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.0",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.2.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.7.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{md,html,css,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "lcov"
    ]
  }
}
